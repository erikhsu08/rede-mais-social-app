<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/login"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="39dp" />

    <ImageView
        android:id="@+id/pessoas_login"
        android:layout_width="309dp"
        android:layout_height="294dp"
        android:src="@drawable/pessoas_login"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="111dp" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/Edit_Text"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_email"
        android:hint="@string/insira_email"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/pessoas_login"
        app:layout_constraintStart_toStartOf="@id/pessoas_login"
        app:layout_constraintTop_toBottomOf="@id/pessoas_login" />

    <EditText
        android:id="@+id/edit_senha"
        style="@style/Edit_Text"
        android:layout_marginTop="44dp"
        android:drawableEnd="@drawable/ic_eye"
        android:hint="@string/digite_senha"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/pessoas_login"
        app:layout_constraintStart_toStartOf="@id/pessoas_login"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao_login"
        style="@style/Botao_Login"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins"
        android:text="@string/entrar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/pessoas_login"
        app:layout_constraintStart_toStartOf="@id/pessoas_login"
        app:layout_constraintTop_toBottomOf="@id/edit_senha" />


</androidx.constraintlayout.widget.ConstraintLayout>